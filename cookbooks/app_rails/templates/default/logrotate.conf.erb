/var/log/<%= @app_name %>/*log {
    missingok
    notifempty
    nocompress
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
